<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EcareMob.Views.Register"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xaml="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms"
    Title="{Binding Title}"
    Padding="20"
    WidthRequest="20">

    <StackLayout HorizontalOptions="CenterAndExpand">
        <Image
            x:Name="RegisterPic"
            HeightRequest="150"
            HorizontalOptions="Center"
            Source="img6"
            VerticalOptions="End"
            WidthRequest="400" />



        <Label
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="{Binding PageLabel}" />

        <Entry
            HorizontalTextAlignment="Center"
            Placeholder="Αριθμός συμβολαίου"
            Text="{Binding ContractNo}" />
        <Entry
            HorizontalTextAlignment="Center"
            Placeholder="ΑΦΜ"
            Text="{Binding VatNumber}" />

        <Entry
            HorizontalTextAlignment="Center"
            Keyboard="Email"
            Placeholder="Email"
            Text="{Binding Email}" />

        <Entry
            HorizontalTextAlignment="Center"
            IsPassword="True"
            Placeholder="Κωδικός Πρόσβασης"
            Text="{Binding Password}" />
        <Entry
            HorizontalTextAlignment="Center"
            IsPassword="True"
            Placeholder="Επιβεβαίωση κωδικού"
            Text="{Binding RepeatPassword}" />

        <Button
            BackgroundColor="#92a2bd"
            Command="{Binding RegisterCommand}"
            HorizontalOptions="FillAndExpand"
            Text="Εγγραφή"
            TextColor="White" />
        <Button
            BackgroundColor="#a8a28e"
            Command="{xaml:NavigateTo '/Login'}"
            HorizontalOptions="FillAndExpand"
            StyleId="SignInButton"
            Text="Επιστροφή"
            TextColor="White" />
        <Label
            HorizontalOptions="Center"
            Text="{Binding RegisterMessage}"
            TextColor="DarkRed"
            VerticalOptions="Center" />
    </StackLayout>
</ContentPage>