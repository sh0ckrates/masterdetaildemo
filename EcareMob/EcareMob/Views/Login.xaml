<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcareMob.Views.Login"
             WidthRequest="20" Padding="20"
             Title="{Binding Title}">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="{Binding WelcomeMessage}" HorizontalOptions="Center" />
        <Entry Text="{Binding Username}" Placeholder="Όνομα Χρήστη" HorizontalTextAlignment ="Center" />
        <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Κωδικός Πρόσβασης" HorizontalTextAlignment ="Center"/>

        <Button 
                Text="Είσοδος"
                Command="{Binding LoginCommand}"
                HorizontalOptions="FillAndExpand"
                StyleId="SignInButton"
                TextColor="White"
                BackgroundColor="#FFFFFF">
        </Button>
        <Label Text="{Binding LoginMessage}" VerticalOptions="Center"  HorizontalOptions="Center"/>

    </StackLayout>
</ContentPage>

