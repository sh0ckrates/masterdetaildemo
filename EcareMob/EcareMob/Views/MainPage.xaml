<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcareMob.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="{Binding WelcomeMsg}" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
        <Entry Text="{Binding Username}" Placeholder="Όνομα Χρήστη"/>
        <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Κωδικός Πρόσβασης"/>

        <Button Text="Είσοδος" Command="{Binding SpeakCommand}"/>
    </StackLayout>

</ContentPage>